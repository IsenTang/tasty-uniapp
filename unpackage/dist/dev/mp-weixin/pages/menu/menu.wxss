
.restaurant-container {
	height: 120rpx;
	padding: 10rpx 20px;
	display: flex;
	flex-direction: column;
	justify-content: center;
}
.restaurant-name {
	font-size: 20px;
}
.swiper {
	height: 300rpx;
	width: 100%;
}
.swiper-img {
	width: 100%;
	height: 100%;
}
.category-name {
	font-weight: 500;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100rpx;
}
.food-item {
	height: 200rpx;
	width: 100%;
}
.menu-container {
	display: flex;
}
.category-bar {
	flex: 1;
	height: calc(100vh - 25px - 140rpx - 300rpx - 100rpx);
}
.category-item {
	margin-top: 10rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	min-height: 30px;
	padding: 20rpx;
	opacity: 0.6;
	font-size: 15px;
}
.active {
	opacity: 1;
	background-color: antiquewhite;
}
.foods-container {
	flex: 3;
	height: calc(100vh - 25px - 140rpx - 300rpx - 100rpx);
	border-left: 2px seashell solid;
	padding: 20rpx;
	box-sizing: border-box;
}
scroll-view ::-webkit-scrollbar {
	width: 0;
	height: 0;
	background-color: transparent;
}

